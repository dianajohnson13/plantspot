<% provide(:title, @user.username) %>
<div class="row" id="profile">
  <div id="user-profile-aside" class="col-md-4">
    <div id="user-heading">
      <div>
        <span><%= gravatar_for @user %></span>
        <span><%= @user.username %></span>
      </div>
    </div>
    <div id="user-info">
      <% if !@user.mini_bio.nil? && @user.mini_bio != "" %>
        <p><strong>Mini Bio:</strong> <%= @user.mini_bio %> 
        <% if current_user?(@user) %>
          <%= link_to "edit", edit_user_path(current_user) %>
        <% end %>
        </p>
      <% elsif current_user?(@user) %>
        <p><strong>Mini Bio:</strong> <%= link_to "Add a mini bio", edit_user_path(current_user) %></p>
      <% end %>
    </div>
  </div>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>
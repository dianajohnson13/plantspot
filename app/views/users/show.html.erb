<% provide(:title, @user.username) %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= @user.username %>
        <%= gravatar_for @user %>
      </h1>
    </section>
    <section>
      <% if !@user.mini_bio.nil? && @user.mini_bio != "" %>
        <%= @user.mini_bio %>
        <h2><%= link_to "Edit your mini bio", edit_user_path(current_user) %></h2>
      <% elsif current_user?(@user) %>
        <h2><%= link_to "Add a mini bio", edit_user_path(current_user) %></h2>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>